{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Cortx",
  "version": "0.1.0",
  "identifier": "com.cortx.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:12321",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Cortx",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZBQ0VGOEUxNERCRjVDRkQKUldUOVhMOU40ZmpPK3ZWV1M4VlBjSkRsOHlYbXc1T3JhOEN2UHFYMXZWOG1aZ3k2UERVTmh3b0gK",
      "endpoints": [
        "https://github.com/ALXS-GitHub/CortX/releases/latest/download/latest.json"
      ]
    }
  }
}
