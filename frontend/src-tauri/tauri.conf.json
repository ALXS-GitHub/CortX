{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Cortx",
  "mainBinaryName": "cortx-app",
  "version": "0.4.3",
  "identifier": "com.cortx.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:12321",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Cortx",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "externalBin": [
      "binaries/cortx"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerHooks": "./windows/hooks.nsh"
      },
      "wix": {
        "fragmentPaths": [
          "./windows/path-fragment.wxs"
        ],
        "componentRefs": [
          "CortxPathEnv"
        ]
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZBQ0VGOEUxNERCRjVDRkQKUldUOVhMOU40ZmpPK3ZWV1M4VlBjSkRsOHlYbXc1T3JhOEN2UHFYMXZWOG1aZ3k2UERVTmh3b0gK",
      "endpoints": [
        "https://github.com/ALXS-GitHub/CortX/releases/latest/download/latest.json"
      ]
    }
  }
}
